	giscanner/doctemplates/Gjs/constructor.tmpl	\
	giscanner/doctemplates/Gjs/default.tmpl	\
	giscanner/doctemplates/Gjs/enum.tmpl	\
	giscanner/doctemplates/Gjs/function.tmpl	\
